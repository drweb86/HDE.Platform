    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <UseWindowsForms>true</UseWindowsForms>
    <UseWPF>true</UseWPF>

    <RootNamespace>HDE.Platform</RootNamespace>
    <AssemblyName>HDE.Platform</AssemblyName>
    <AssemblyOriginatorKeyFile>Platform.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Windows.Compatibility" Version="5.0.0" />
    <None Include="Platform.snk" />
  </ItemGroup>
</Project>